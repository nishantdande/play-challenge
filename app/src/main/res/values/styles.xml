<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppThemeTextStyle</item>
        <item name="editTextStyle">@style/AppThemeEditTextStyle</item>
        <item name="textInputStyle">@style/AppThemeTextInputStyle</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ThemeYellow" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFDE03</item>
        <item name="colorPrimaryDark">#0336FF</item>
        <item name="colorAccent">#FF0266</item>
        <item name="textInputStyle">@style/ThemeYellowTextInputStyle</item>
        <item name="android:textViewStyle">@style/ThemeYellowTextStyle</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppThemeButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppThemeTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ThemeYellowTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppThemeEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppThemeTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="ThemeYellowTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">#0336FF</item>
    </style>

</resources>